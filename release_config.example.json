{
  "_comment": "Example configuration file for Release Automation Tools",
  "_description": "Copy this file to release_config.json and customize for your project",
  
  "version_file": "version.json",
  "changelog_file": "CHANGELOG.md",
  "repo_path": ".",
  "remote_name": "origin",
  
  "_github_settings": "GitHub repository configuration",
  "repository": "your-org/your-repo",
  "github_token": "${GITHUB_TOKEN}",
  
  "_release_configuration": "General release settings",
  "release_settings": {
    "tag_prefix": "v",
    "create_tag": true,
    "push_tag": true,
    "create_github_release": true,
    "sign_tags": false,
    "delete_branch_after_merge": true,
    "target_branch": "main"
  },
  
  "_pr_merge_configuration": "Pull request auto-merge settings",
  "pr_merge_settings": {
    "method": "squash",
    "_method_options": ["merge", "squash", "rebase"],
    
    "required_reviews": 1,
    "required_status_checks": [
      "continuous-integration",
      "security-scan",
      "unit-tests"
    ],
    
    "auto_merge_labels": [
      "ready-to-merge",
      "auto-merge",
      "hotfix"
    ],
    
    "blocked_labels": [
      "do-not-merge",
      "work-in-progress",
      "wip",
      "needs-review",
      "blocked"
    ],
    
    "target_branches": [
      "main",
      "master",
      "develop"
    ],
    
    "timeout_minutes": 30,
    "retry_interval_seconds": 60,
    "dismiss_stale_reviews": true,
    "require_up_to_date": true,
    "delete_head_branch": true
  },
  
  "_assets_configuration": "Release assets to upload",
  "assets": [
    {
      "path": "dist/application.zip",
      "name": "application-bundle.zip",
      "label": "Application Bundle (All Platforms)"
    },
    {
      "path": "dist/docs.pdf", 
      "name": "documentation.pdf",
      "label": "User Documentation"
    },
    {
      "path": "CHANGELOG.md",
      "name": "CHANGELOG.md",
      "label": "Changelog"
    }
  ],
  
  "_conventional_commits": "Configuration for conventional commits parsing",
  "conventional_commits": {
    "enabled": true,
    "types": {
      "feat": {
        "label": "‚ú® Features",
        "version_bump": "minor"
      },
      "fix": {
        "label": "üêõ Bug Fixes", 
        "version_bump": "patch"
      },
      "docs": {
        "label": "üìö Documentation",
        "version_bump": "none"
      },
      "style": {
        "label": "üíÑ Styles",
        "version_bump": "none"
      },
      "refactor": {
        "label": "‚ôªÔ∏è Code Refactoring",
        "version_bump": "none"
      },
      "perf": {
        "label": "‚ö° Performance Improvements",
        "version_bump": "patch"
      },
      "test": {
        "label": "‚úÖ Tests",
        "version_bump": "none"
      },
      "build": {
        "label": "üîß Build System",
        "version_bump": "none"
      },
      "ci": {
        "label": "üë∑ CI/CD",
        "version_bump": "none"
      },
      "chore": {
        "label": "üì¶ Chores",
        "version_bump": "none"
      },
      "revert": {
        "label": "‚è™ Reverts",
        "version_bump": "patch"
      }
    }
  },
  
  "_notifications": "Notification settings (future feature)",
  "notifications": {
    "enabled": false,
    "slack": {
      "webhook_url": "${SLACK_WEBHOOK_URL}",
      "channel": "#releases"
    },
    "email": {
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "username": "${EMAIL_USERNAME}",
      "password": "${EMAIL_PASSWORD}",
      "recipients": ["team@company.com"]
    }
  },
  
  "_advanced_options": "Advanced configuration options",
  "advanced": {
    "parallel_processing": true,
    "dry_run_mode": false,
    "verbose_logging": false,
    "backup_before_release": true,
    "rollback_on_failure": true,
    "max_changelog_commits": 100,
    "commit_message_template": "{type}({scope}): {description}",
    "release_branch_pattern": "release/*",
    "hotfix_branch_pattern": "hotfix/*"
  }
}